# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# OnlyFans API Configuration (Optional - for data sync)
# Contact OnlyFans API support or your account manager to get these credentials
ONLYFANS_API_URL=https://onlyfans.com/api2/v2
ONLYFANS_API_KEY=your-api-key
ONLYFANS_API_SECRET=your-api-secret

# Application Configuration
NEXT_PUBLIC_APP_NAME=VaultCRM
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Anthropic AI Configuration
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-xxxxx

# AI Behavior Configuration
AI_AUTO_SEND_THRESHOLD=50  # Auto-send if PPV < $50 (messages >$50 require approval)
AI_MIN_CONFIDENCE=0.7       # Minimum confidence score to auto-send (0-1)
AI_TEMPERATURE=0.7          # Claude creativity level (0=focused, 1=creative)
AI_MAX_TOKENS=500           # Maximum response length in tokens

# AI Safety & Compliance
AI_CONTENT_FILTER_ENABLED=true                # Enable content safety filtering
AI_REQUIRE_APPROVAL_FOR_NEW_FANS=true        # First-time conversations need approval
AI_REQUIRE_APPROVAL_FOR_ALL=true             # Override: ALL messages need approval (recommended for launch)

# Feature Flags
NEXT_PUBLIC_ENABLE_SIGNUP=false  # Set to true when ready to enable self-service signup
NEXT_PUBLIC_ENABLE_ONLYFANS_SYNC=false  # Set to true when OF API credentials are configured
NEXT_PUBLIC_ENABLE_AI_CHAT=true  # Enable AI-powered chat system
