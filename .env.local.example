# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# OnlyFans API Configuration (Optional - for data sync)
# Contact OnlyFans API support or your account manager to get these credentials
ONLYFANS_API_URL=https://onlyfans.com/api2/v2
ONLYFANS_API_KEY=your-api-key
ONLYFANS_API_SECRET=your-api-secret

# Application Configuration
NEXT_PUBLIC_APP_NAME=VaultCRM
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_SIGNUP=false  # Set to true when ready to enable self-service signup
NEXT_PUBLIC_ENABLE_ONLYFANS_SYNC=false  # Set to true when OF API credentials are configured
